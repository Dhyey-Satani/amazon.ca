# Amazon Job Bot Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# TELEGRAM NOTIFICATIONS (Required for Telegram alerts)
# =============================================================================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Get your chat ID by messaging your bot and visiting:
# https://api.telegram.org/bot<your_bot_token>/getUpdates
TELEGRAM_CHAT_ID=your_chat_id_here

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# URLs to monitor (comma-separated)
AMAZON_URLS=https://hiring.amazon.ca,https://hiring.amazon.ca/app#/jobDetail/R-12345

# How often to check for new jobs (in seconds)
POLL_INTERVAL=10

# Whether to use Selenium for JavaScript-rendered pages (true/false)
USE_SELENIUM=true

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Enable/disable different notification types (true/false)
DESKTOP_NOTIFICATIONS=true
AUTO_OPEN_BROWSER=true
EMAIL_NOTIFICATIONS=false

# =============================================================================
# EMAIL NOTIFICATIONS (Optional - if EMAIL_NOTIFICATIONS=true)
# =============================================================================
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_TO=your_email@gmail.com

# =============================================================================
# DATABASE AND STORAGE
# =============================================================================
# Path to SQLite database file
DATABASE_PATH=jobs.db

# How many days to keep old job records
CLEANUP_DAYS=30

# =============================================================================
# ERROR HANDLING
# =============================================================================
# Maximum number of retry attempts for failed requests
MAX_RETRIES=3

# Delay between retries (in seconds)
RETRY_DELAY=60

# =============================================================================
# LOGGING
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================
# User agent for web requests (leave empty for default)
USER_AGENT=

# Request timeout in seconds
REQUEST_TIMEOUT=30

# Selenium page load timeout in seconds
SELENIUM_TIMEOUT=20