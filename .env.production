# Production Environment Configuration for Render Deployment
# Amazon Job Monitor Bot

# ===== JOB MONITORING SETTINGS =====
AMAZON_URLS=https://hiring.amazon.ca/app#/jobsearch
POLL_INTERVAL=30
USE_SELENIUM=true
MAX_RETRIES=3
RETRY_DELAY=60
AUTO_START_MONITORING=true

# ===== API SETTINGS =====
API_PORT=8000

# ===== STORAGE SETTINGS =====
DATABASE_PATH=/app/data/jobs.db
CLEANUP_DAYS=30

# ===== LOGGING SETTINGS =====
LOG_LEVEL=INFO

# ===== CHROME/SELENIUM SETTINGS =====
# These are automatically set in production Docker environment
WEBDRIVER_CHROME_DRIVER=/usr/bin/chromedriver
CHROME_BIN=/usr/bin/google-chrome
DISPLAY=:99

# ===== NOTIFICATION SETTINGS =====
# Set these in Render dashboard as environment variables for security
# TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# TELEGRAM_CHAT_ID=your_telegram_chat_id_here
EMAIL_NOTIFICATIONS=false
DESKTOP_NOTIFICATIONS=false
AUTO_OPEN_BROWSER=false

# ===== PRODUCTION OPTIMIZATIONS =====
# Disable fake data generation (production mode)
GENERATE_FAKE_DATA=false
STRICT_VALIDATION=true

# ===== CHROME PERFORMANCE SETTINGS =====
CHROME_NO_SANDBOX=1
CHROME_DISABLE_GPU=1
CHROME_HEADLESS=1