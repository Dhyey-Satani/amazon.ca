# Production Environment Configuration for Cloud Deployment
# Use this for Render, Railway, Heroku, etc.

# =============================================================================
# SELENIUM CONFIGURATION
# =============================================================================
USE_SELENIUM=true
DOCKER=true

# =============================================================================
# API CONFIGURATION  
# =============================================================================
API_PORT=8000
API_HOST=0.0.0.0
AUTO_START_MONITORING=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
POLL_INTERVAL=30
AMAZON_URLS=https://hiring.amazon.ca/app#/jobsearch

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_PATH=/app/data/jobs.db

# =============================================================================
# CHROME CONFIGURATION (for Docker)
# =============================================================================
CHROME_BIN=/usr/bin/google-chrome
WEBDRIVER_CHROME_DRIVER=/usr/bin/chromedriver
CHROME_USER_DATA_DIR=/app/.chrome_user_data

# =============================================================================
# OPTIONAL FEATURES
# =============================================================================
AUTO_OPEN_BROWSER=false