# Optimized Environment Configuration for High-Traffic Production

# Core Configuration
USE_SELENIUM=true
API_PORT=8000
API_HOST=0.0.0.0
AUTO_START_MONITORING=true
DOCKER=true

# Monitoring - Reduced frequency to prevent overload
POLL_INTERVAL=60  # Increased from 30 to 60 seconds
AMAZON_URLS=https://hiring.amazon.ca/app#/jobsearch
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
CACHE_TTL_SECONDS=10

# Database
DATABASE_PATH=/app/data/jobs.db

# Chrome (Docker)
CHROME_BIN=/usr/bin/google-chrome
WEBDRIVER_CHROME_DRIVER=/usr/bin/chromedriver
CHROME_USER_DATA_DIR=/app/.chrome_user_data

# Uvicorn Performance Settings
UVICORN_WORKERS=1
UVICORN_WORKER_CONNECTIONS=100
UVICORN_KEEPALIVE=2